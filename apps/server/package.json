{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "./src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "predev": "npm run db:dev:up",
    "dev": "nodemon src/index.ts",
    "lint": "eslint ./src/**",
    "db:setup": "npx prisma migrate dev && npx prisma generate",
    "prisma:dev:deploy": "prisma migrate deploy",
    "prisma:test:deploy": "dotenv -e .env.test -- prisma migrate deploy",
    "db:dev:rm": "docker compose -f docker-compose.yml rm -s -f -v",
    "db:dev:up": "docker compose -f docker-compose.yml up -d",
    "db:dev:restart": "npm run db:dev:rm && npm run db:dev:up && sleep 2 && npm run prisma:dev:deploy && npm run db:setup",
    "db:test:rm": "docker compose -f docker-compose.test.yml rm -s -f -v",
    "db:test:up": "docker compose -f docker-compose.test.yml up -d",
    "db:test:restart": "npm run db:test:rm && npm run db:test:up && sleep 2 && npm run prisma:test:deploy",
    "pretest": "npm run db:test:restart",
    "test": "dotenv -e .env.test -- jest -i",
    "posttest": "docker stop db_test && docker container rm db_test"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.4.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.1",
    "@types/cors": "^2.8.15",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.7",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prisma": "^5.4.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
